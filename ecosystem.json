{
    "apps": [
        {
            "name": "wyblog", //对应Nginx上的配置
            "script": "./bin/www", //入口文件
            "env": {
                "COMON_VARIABLE": "true"
            },
            "env_production": {
                "NODE_ENV": "production"
            }
        }
    ],
    "deploy": {
        "production": {
            "user": "root",
            "host": ["106.52.75.174"], //服务器ip地址
            "port": "22", //登录端口
            "ref": "origin/main", //git仓库对应的项目目录
            "repo": "git@github.com:WYBOOM/wyblog.git",
            "path": "/html/www/wyblog", //要部署到服务器哪个位置，如果没有会自动创建 
            "ssh_options": "StrictHostKeyChecking=no",
            "post-deploy": "cnpm install &&  pm2 reload deploy.yaml --env production",
            "pre-deploy-local": "echo 'Deploy Done!'", //提示发布进程
            "env": {
                "NODE_ENV": "production"
            }
        }
    }
}
